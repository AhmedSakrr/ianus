{
    "extends": [
        "config:base",
        ":semanticCommits",
        ":semanticCommitScopeDisabled"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "semanticCommitType": "Chore"
        },
        {
            "matchDepTypes": [
                "dependencies",
                "require"
            ],
            "semanticCommitType": "Fix"
        }
    ]
}